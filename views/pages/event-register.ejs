<h1>Register: <%= event.title %></h1>
<p><%= event.date %> Â· <%= event.location %></p>
<% if (submitted) { %>
  <p><strong>All set!</strong> Your spot is saved. See you there.</p>
<% } %>

<form method="post" class="form">
  <label>Participant Name<input name="name" required></label>
  <label>Age<input name="age" type="number" min="6" max="17" required></label>
  <label>Parent/Guardian Email<input name="email" type="email" required></label>
  <label>Notes<textarea name="notes" rows="4"></textarea></label>
  <button class="btn btn-primary" type="submit">Register</button>
  <p class="muted">We respect family privacy and collect minimal data.</p>
  <input type="hidden" name="_kind" value="registration">
</form>



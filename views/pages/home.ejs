<section class="hero">
  <!-- Hero background overlay -->
  <div class="hero-overlay"></div>
  
  <div class="hero-text">
    <h1>Learn Bitcoin. Build the Future.</h1>
    <p>For kids aged 6–17: money literacy, Bitcoin basics, coding with sats, and a playful circular economy where you can spend your sats!</p>
    <div class="hero-ctas">
      <a href="/activities" class="btn btn-white">Explore Activities</a>
      <a href="/events" class="btn">See Events</a>
    </div>
  </div>
  <div class="hero-art">
    <img src="/static/images/hero/hero-art.jpg" alt="BitJR Academy Learning" class="hero-art-image">
  </div>
</section>

<section>
  <h2>Upcoming Events</h2>
  <div class="card-grid">
    <% if (events && events.length) { %>
      <% events.forEach(e => { %>
        <article class="card">
          <h3><%= e.title %></h3>
          <p><%= e.date %> · <%= e.location %></p>
          <p><%= e.summary %></p>
          <a class="btn" href="/events/<%= e.id %>/register">Register</a>
        </article>
      <% }) %>
    <% } else { %>
      <p>No events yet. Check back soon!</p>
    <% } %>
  </div>
</section>

<section>
  <h2>From the Blog</h2>
  <div class="card-grid">
    <% if (posts && posts.length) { %>
      <% posts.forEach(p => { %>
        <article class="card">
          <h3><a href="/blog/<%= p.slug %>"><%= p.title %></a></h3>
          <p><%= p.excerpt %></p>
        </article>
      <% }) %>
    <% } else { %>
      <p>Coming soon!</p>
    <% } %>
  </div>
</section>



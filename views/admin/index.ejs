<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal - BitJR Academy & Space</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .admin-header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, var(--primary), #ff6600);
            color: white;
            border-radius: 20px;
        }
        
        .admin-header h1 {
            margin: 0 0 10px;
            font-size: 2.5rem;
            font-weight: 800;
        }
        
        .admin-header p {
            margin: 0;
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .admin-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }
        
        .admin-card {
            background: white;
            border: 3px solid #111;
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            box-shadow: 8px 8px 0 #00000040;
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
        }
        
        .admin-card:hover {
            transform: translateY(-8px);
            box-shadow: 12px 12px 0 #00000050;
            text-decoration: none;
            color: inherit;
        }
        
        .admin-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }
        
        .admin-card h3 {
            margin: 0 0 15px;
            color: #333;
            font-size: 1.5rem;
        }
        
        .admin-card p {
            margin: 0;
            color: #666;
            line-height: 1.6;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .stat-card {
            background: white;
            border: 3px solid #111;
            border-radius: 16px;
            padding: 20px;
            text-align: center;
            box-shadow: 6px 6px 0 #00000025;
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: var(--primary);
            margin-bottom: 5px;
        }
        
        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }
        
        .back-link {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            background: #f0f0f0;
            color: #333;
            text-decoration: none;
            border-radius: 8px;
            border: 2px solid #ddd;
            transition: all 0.3s ease;
        }
        
        .back-link:hover {
            background: #e0e0e0;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1>üõ†Ô∏è Admin Portal</h1>
            <p>Manage your BitJR Academy & Space content</p>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number" id="blog-count">-</div>
                <div class="stat-label">Blog Posts</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="event-count">-</div>
                <div class="stat-label">Events</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="team-count">-</div>
                <div class="stat-label">Team Members</div>
            </div>
            <div class="stat-card">
                <div class="stat-number" id="partner-count">-</div>
                <div class="stat-label">Partners</div>
            </div>
        </div>
        
        <div class="admin-grid">
            <a href="/admin/blogs" class="admin-card">
                <div class="admin-icon">üìù</div>
                <h3>Blog Management</h3>
                <p>Create, edit, and manage blog posts. Add new content, update existing posts, and organize your blog content.</p>
            </a>
            
            <a href="/admin/events" class="admin-card">
                <div class="admin-icon">üìÖ</div>
                <h3>Event Management</h3>
                <p>Manage upcoming events, workshops, and activities. Add new events, update details, and track registrations.</p>
            </a>
            
            <a href="/admin/team" class="admin-card">
                <div class="admin-icon">üë•</div>
                <h3>Team Management</h3>
                <p>Update team member information, add new team members, and manage team profiles and bios.</p>
            </a>
            
            <a href="/admin/partners" class="admin-card">
                <div class="admin-icon">ü§ù</div>
                <h3>Partner Management</h3>
                <p>Manage partner organizations, update partner information, and maintain partnership details.</p>
            </a>
            
            <div class="admin-card" style="cursor: default;">
                <div class="admin-icon">üîÑ</div>
                <h3>Cache Management</h3>
                <p>Clear cache to ensure the latest version is displayed on the site.</p>
                <div style="margin-top: 20px; display: flex; gap: 10px; flex-direction: column;">
                    <button onclick="clearCache()" class="btn btn-primary" style="width: 100%; padding: 12px;">Clear Cache</button>
                    <button onclick="restartServer()" class="btn" style="width: 100%; padding: 12px; background: #333; color: white; border-color: #333;">Restart Server</button>
                </div>
                <div id="cache-message" style="margin-top: 10px; font-weight: bold;"></div>
            </div>
        </div>
        
        <div style="text-align: center;">
            <a href="<%= typeof isAdminSubdomain !== 'undefined' && isAdminSubdomain ? 'https://bitjracademyandspace.org' : '/' %>" class="back-link">‚Üê Back to Website</a>
        </div>
    </div>
    
    <script>
        // Load stats
        fetch('/api/stats')
            .then(response => response.json())
            .then(data => {
                document.getElementById('blog-count').textContent = data.blogs || 0;
                document.getElementById('event-count').textContent = data.events || 0;
                document.getElementById('team-count').textContent = data.team || 0;
                document.getElementById('partner-count').textContent = data.partners || 0;
            })
            .catch(error => {
                console.error('Error loading stats:', error);
            });
            
        // Cache management functions
        function clearCache() {
            const messageEl = document.getElementById('cache-message');
            messageEl.textContent = 'Clearing cache...';
            messageEl.style.color = '#666';
            
            fetch('/api/admin/clear-cache', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageEl.textContent = '‚úÖ Cache cleared successfully!';
                    messageEl.style.color = 'green';
                    
                    // Clear message after 3 seconds
                    setTimeout(() => {
                        messageEl.textContent = '';
                    }, 3000);
                } else {
                    messageEl.textContent = '‚ùå Error clearing cache';
                    messageEl.style.color = 'red';
                }
            })
            .catch(error => {
                console.error('Error clearing cache:', error);
                messageEl.textContent = '‚ùå Error clearing cache';
                messageEl.style.color = 'red';
            });
        }
        
        function restartServer() {
            if (!confirm('Are you sure you want to restart the server? This will briefly interrupt service.')) {
                return;
            }
            
            const messageEl = document.getElementById('cache-message');
            messageEl.textContent = 'Restarting server...';
            messageEl.style.color = '#666';
            
            fetch('/api/admin/restart-server', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    messageEl.textContent = '‚úÖ Server restart initiated. Page will reload in 5 seconds...';
                    messageEl.style.color = 'green';
                    
                    // Reload page after 5 seconds to allow server to restart
                    setTimeout(() => {
                        window.location.reload();
                    }, 5000);
                } else {
                    messageEl.textContent = '‚ùå Error restarting server';
                    messageEl.style.color = 'red';
                }
            })
            .catch(error => {
                console.error('Error restarting server:', error);
                messageEl.textContent = '‚è≥ Server is restarting... Reloading in 5 seconds...';
                messageEl.style.color = '#666';
                setTimeout(() => {
                    window.location.reload();
                }, 5000);
            });
        }
    </script>
</body>
</html>
